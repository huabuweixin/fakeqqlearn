<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="155dp"
        android:layout_height="60dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="203dp"
        android:layout_marginBottom="7dp"
        android:text="QQ注册"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNumberSigned"
        android:layout_width="406dp"
        android:layout_height="47dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:autofillHints=""
        android:background="#ffffff"
        android:ems="10"
        android:hint="账号"
        android:inputType="number"
        android:maxLength="15"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="406dp"
        android:layout_height="47dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:autofillHints=""
        android:background="#ffffff"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="15"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumberPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberSigned"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextNumberPassword"
        android:layout_width="406dp"
        android:layout_height="47dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="3dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="请再次确认密码"
        android:inputType="textPassword"
        android:maxLength="15"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="406dp"
        android:layout_height="47dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="2dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="请输入邮箱账号"
        android:inputType="textEmailAddress"
        android:maxLength="20"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/SexRadio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberPassword"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="106dp"
        android:layout_height="40dp"
        android:layout_marginBottom="42dp"
        android:text="性别:"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/SexRadio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress"
        tools:ignore="MissingConstraints" />

    <RadioGroup
        android:id="@+id/SexRadio"
        android:layout_width="262dp"
        android:layout_height="53dp"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="41dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/mainRegisterRdBtnFemale"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:text="女生" />

        <RadioButton
            android:id="@+id/radioButtonmale"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:text="男生" />

    </RadioGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="102dp"
        android:layout_height="41dp"
        android:text="注册"
        style="@style/buttonstyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.588" />




</androidx.constraintlayout.widget.ConstraintLayout>